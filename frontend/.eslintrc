{
  "env":
  {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["plugin:vue/essential", "airbnb-base"],
  "plugins": [
    "vue"
  ],
  "settings": {
    "import/resolver": [
      "node",
      {
        "webpack": {
          "config": "./webpack/webpack.base.conf.js"
        },
        "extensions": [".js", ".vue"]
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "rules":
  {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "off"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
